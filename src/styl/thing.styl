@import 'checks'

table.rights
    // width: 100%
    margin-top: 15px
    font: 20px/30px $qz-serif
    -webkit-font-smoothing: antialiased

    th
        border-bottom: 1px solid $qz-gray-1
        vertical-align: bottom

    td.check, th.yes, th.no
        padding-right: 5px
        padding-top: 10px
        width: 25px

        &.yes
            [type="checkbox"].highlight:disabled:not(:checked) + label:before,
            [type="checkbox"].highlight:disabled:checked + label:before
                background-color: $qz-gray-1

        &.no
            [type="checkbox"].highlight:disabled:not(:checked) + label:before,
            [type="checkbox"].highlight:disabled:checked + label:before
                background-color: $qz-purp-1

    td.label, th.label
        padding-left: 5px
        padding-top: 10px
        white-space: nowrap
        vertical-align: middle

    td.response, th.response
        display: none
        text-align: left
        vertical-align: middle
        padding-left: 10px
        padding-top: 10px
        width: 99%

        div.wrap
            width: 90%

            div.fill
                background-color: $qz-gray-1;
                height: 30px
                float: left

        div.pct
            margin-left: 3px
            float: left

qz-button-group()

button.score
    margin-top: 20px

.your-results
    display: none

    .robo
        display: none

@media only screen and (max-width 600px)
    table.rights, table.results
        font: 14px/22px $qz-serif;

        td.check
            font: 20px/30px $qz-serif

        td.response
            div.wrap
                display: none

            div.pct
                text-align: right
