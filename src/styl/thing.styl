table.rights
    margin-top: 15px
    font: 20px/30px $qz-serif
    -webkit-font-smoothing: antialiased

    th
        border-bottom: 1px solid $qz-gray-1

    th.label
        text-align: left
        padding-left: 10px

    td.check
        padding: 5px 15px 0 15px

        input
            transform: scale(2)

            &:focus
                outline: 0

    td.label
            padding-left: 10px

table.results
    display: none;
    margin-top: 15px
    font: 20px/30px $qz-serif
    -webkit-font-smoothing: antialiased

    th
        border-bottom: 1px solid $qz-gray-1

    th.label, th.response
        text-align: left
        padding-left: 10px

    td.check
        padding: 5px 15px 0 15px

        input
            transform: scale(2)

            &:focus
                outline: 0

    td.label
        padding-left: 10px
        white-space: nowrap

    td.response
        width: 100%
        padding-left: 10px

        div.wrap
            width: 75%

            div.fill
                background-color: $qz-purp-1;
                height: 30px
                float: left

        div.pct
            margin-left: 3px
            float: left

qz-button-group()

button.score
    margin-top: 20px

p.response
    font-weight: bold;

.your_results
    display: none

@media only screen and (max-width 600px)
    table.rights, table.results
        font: 16px/24px $qz-serif;

        td.check
            padding: 5px 10px

    table.results
        td.check
            width: 5%

        td.response
            width: 60%

            div.fill
                display: none
