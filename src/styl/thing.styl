.split
    .left, .right
        width: 48%
        float: left

    .spacer
        width: 4%
        float: left

.break
    clear: both

table.rights
    margin-top: 15px
    font: 20px/30px $qz-serif
    -webkit-font-smoothing: antialiased

    th
        border-bottom: 1px solid $qz-gray-1

    th.label
        text-align: left
        padding-left: 10px

    td.check
        padding: 5px 15px

        input
            transform: scale(2)

            &:focus
                outline: 0

    td.label
            padding-left: 10px

qz-button-group()

button.score
    margin-top: 20px

p.response
    font-weight: bold;

.your_results
    display: none

table.results
    width: 100%
    margin-top: 15px
    font: 20px/30px $qz-serif
    -webkit-font-smoothing: antialiased

    th
        border-bottom: 1px solid $qz-gray-1

    th.label, th.response
        text-align: left
        padding-left: 10px

    td.check
        padding: 5px 15px

        input
            transform: scale(2)

            &:focus
                outline: 0

    td.label
            padding-left: 10px

    td.response
        width: 100%
        padding-left: 10px

        div.fill
            background-color: $qz-purp-1;
            height: 30px
            float: left

        div.pct
            margin-left: 3px
            float: left

@media only screen and (max-width 600px)
    .split
        .left, .right
            width: 100%
            float: none

        .spacer
            display: none

    table.rights, table.results
        font: 16px/24px $qz-serif;

        td.check
            padding: 5px 10px

    table.results
        td.check
            width: 5%

        td.response
            width: 60%

            div.fill
                display: none
