h2= question

table.rights
	tr
		th.yes Yes
		th.no No
		th.label
			
	for right in rights
		tr(id=right.slug)
			td(class="check yes ")
				input(type="checkbox")
			td(class="check no ")
				input(type="checkbox")
			td(class="label")= right.text
		
table.results
	tr
		th.yes Yes
		th.no No
		th.label
		th.response Shoppers who said Yes
			
	for right in rights
		tr(id=right.slug)
			td(class="check yes")
				input(type="checkbox", disabled="disabled")
			td(class="check no")
				input(type="checkbox", disabled="disabled")
			td(class="label")= right.text
			td(class="response")
				div.wrap
					div.fill
				div.pct
							
button.active.score(type="button") Check my answers

